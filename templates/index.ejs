<%- include("partials/head", { user, path, title: "Ecoplug - Home",  url}) %>
<head>
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
	<link href="https://ecoplug.xyz/css/main.css" type="text/css" rel="stylesheet">
	<link href="https://ecoplug.xyz/css/tailwind.css" type="text/css" rel="stylesheet">
  <link href="https://ecoplug.xyz/css/tailwind2.css" type="text/css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" type="text/css" rel="stylesheet">

</head>
<body>
	<div class="home-top">
		<form action="/products" id="form" method="post" name="form">
			<div class="searchDiv">
				<div style="padding-bottom: 10px; text-align: center">
					<h1 class="text-6xl font-bold mb-2" style="font-family: 'Montserrat', sans-serif;">Ecoplug</h1>
					<div style="color: #E0E0E0; font-family: 'Montserrat', sans-serif;">
					Search for eco friendly products.
					</div>
				</div>
				<div class="icon">
					<input id="searchQueryInput" name="search" placeholder="Search existing Products" type="text" value=""> <button id="searchQuerySubmit" name="searchQuerySubmit" type="submit"><svg style="width:24px;height:24px" viewbox="0 0 24 24">
					<path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" fill="#666666"></path></svg></button>
				</div>
			</div>
		</form>
    	<div class="wave"></div>
	</div>

	<div class="home">
		<section class="mb-20">
			<div class="flex">
				<a class="block flex-grow flex items-center" href="/products">
				<div class="text-4xl">
					<i class="fas fa-arrow-up" style="color: white"></i>
				</div>
				<div class="ml-5">
					<div class="text-4xl" style="color: white">
						New Products
					</div>
					<div class="font-thin text-xl text-gray-300">
						New Products added to the website!
					</div>
				</div></a>
			</div>
  <div class="grid grid-cols-1 gap-10 pt-8 pb-12 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 1xl:gric-cols-3 2xl:grid-cols-4">
  <% for(let newproduct of newproducts) { %>
	<div class="transition duration-200 ease-in-out transform rounded-lg lg:hover:scale-105 h-full flex"><div class="rounded-lg bg-template-body w-full" style="opacity: 1; transform: none;"><a class="transition duration-200 ease-in-out transform rounded-lg bg-template-body lg:hover:scale-105" href="/products/<%= newproduct._id %>"><div class="flex flex-col justify-between h-full overflow-hidden text-white rounded-lg"><div style="background-color: #2f2f2f !important;"class="flex flex-col justify-between h-full px-4 py-5 sm:p-6"><div lass="flex"><div style="padding: 8px; border-radius: 4px; background-color: #222 !important" class="flex flex-col overflow-auto break-words opacity-95"><h2 class="text-2xl font-bold"><%= newproduct.product.name %></h2><p class="mt-1 text-on-template"><%= newproduct.product.summary %></p></div></div><ul class="flex mt-8 -mx-1 space-x-2"><% newproduct.product.categories.forEach ((category)=> { %><a style="background-color: #222" class="px-2 py-1 text-xs font-medium leading-5 whitespace-no-wrap transition rounded-md hover:bg-opacity-75 opacity-95 text-on-tag-template bg-tag-template-body" href="/products?tag=<%=category%>"><%= category %></a><% }) %></ul></div><div style="background-color: #383737" class="flex items-center justify-between px-4 py-5 -mx-4 flex-nowrap bg-template-footer sm:p-6"><div class="flex items-center px-4"><div class="flex-shrink-0"><a href="/users/<%=newproduct.user.id%>"><div class="relative transform hover:scale-110 transition duration-200 ease-in-out"></div></a></div><div class="ml-4 overflow-auto opacity-95"><h3 class="text-lg font-medium leading-6 text-white truncate"><%= newproduct.user.username %></h3><p class="text-sm leading-5 truncate text-template-discriminator"><span><%= newproduct.added ? moment(newproduct.added).fromNow():"28/05/2021"%></span></p></div></div><ul class="flex items-center justify-end pr-4 xl:flex-col md:items-start 1xl:items-center 1xl:flex-row "><li class="flex items-center text-sm font-medium"><i class="mr-2 fas fa-eye text-template-250"></i><span class="font-semibold text-template-200"><%=newproduct.views || 0 %></span></li><div class="mx-3 text-discord-200 xl:hidden 1xl:flex">|</div><li class="flex items-center text-sm font-medium"><i class="mr-2 fas fa-heart text-template-250"></i><span class="font-semibold text-template-200"><%=newproduct.likes || 0 %></span></li></ul></div></div></a></div></div>
  <% } %>
  </div>

			<div class="text-center mt-14">
				<a class="bg-gray-dark rounded-lg px-3 py-2 text-xl" href="/products" id="home-text" style="color: white">View More</a>
			</div>
		</section>
		<section class="mb-20">
			<div class="flex">
				<a class="block flex-grow flex items-center" href="/products">
				<div class="text-4xl">
					<i class="fas fa-fire" style="color: white"></i>
				</div>
				<div class="ml-5">
					<div class="text-4xl" style="color: white">
						Popular Products
					</div>
					<div class="font-thin text-xl text-gray-300">
						A list of most viewed Products
					</div>
				</div></a>
			</div>
  <div class="grid grid-cols-1 gap-10 pt-8 pb-12 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 1xl:gric-cols-3 2xl:grid-cols-4">
  <% for(let popularproduct of popular) { %>
	<div class="transition duration-200 ease-in-out transform rounded-lg lg:hover:scale-105 h-full flex"><div class="rounded-lg bg-template-body w-full" style="opacity: 1; transform: none;"><a class="transition duration-200 ease-in-out transform rounded-lg bg-template-body lg:hover:scale-105" href="/products/<%= popularproduct._id %>"><div class="flex flex-col justify-between h-full overflow-hidden text-white rounded-lg"><div style="background-color: #2f2f2f !important;"class="flex flex-col justify-between h-full px-4 py-5 sm:p-6"><div lass="flex"><div style="padding: 8px; border-radius: 4px; background-color: #222 !important" class="flex flex-col overflow-auto break-words opacity-95"><h2 class="text-2xl font-bold"><%= popularproduct.product.name %></h2><p class="mt-1 text-on-template"><%= popularproduct.product.summary %></p></div></div><ul class="flex mt-8 -mx-1 space-x-2"><% popularproduct.product.categories.forEach ((category)=> { %><a style="background-color: #222" class="px-2 py-1 text-xs font-medium leading-5 whitespace-no-wrap transition rounded-md hover:bg-opacity-75 opacity-95 text-on-tag-template bg-tag-template-body" href="/products?tag=<%=category%>"><%= category %></a><% }) %></ul></div><div style="background-color: #383737" class="flex items-center justify-between px-4 py-5 -mx-4 flex-nowrap bg-template-footer sm:p-6"><div class="flex items-center px-4"><div class="flex-shrink-0"><a href="/users/<%=popularproduct.user.id%>"><div class="relative transform hover:scale-110 transition duration-200 ease-in-out"></div></a></div><div class="ml-4 overflow-auto opacity-95"><h3 class="text-lg font-medium leading-6 text-white truncate"><%= popularproduct.user.username %></h3><p class="text-sm leading-5 truncate text-template-discriminator"><span><%= popularproduct.added ? moment(popularproduct.added).fromNow():"28/05/2021"%></span></p></div></div><ul class="flex items-center justify-end pr-4 xl:flex-col md:items-start 1xl:items-center 1xl:flex-row "><li class="flex items-center text-sm font-medium"><i class="mr-2 fas fa-eye text-template-250"></i><span class="font-semibold text-template-200"><%=popularproduct.views || 0 %></span></li><div class="mx-3 text-discord-200 xl:hidden 1xl:flex">|</div><li class="flex items-center text-sm font-medium"><i class="mr-2 fas fa-heart text-template-250"></i><span class="font-semibold text-template-200"><%=popularproduct.likes || 0 %></span></li></ul></div></div></a></div></div>
  <% } %>
  </div>
			<div class="text-center mt-14">
				<a class="bg-gray-dark rounded-lg px-3 py-2 text-xl" href="/products" id="home-text" style="color: white">View More</a>
			</div>
		</section>
	</div>
	<div style="padding-top: 20px"></div>
	<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'>
	</script> 
	<script src='/js/main.js'></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
  AOS.init();
</script>
